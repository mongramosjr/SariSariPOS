<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="216dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/number_one"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="1"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_two"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:text="2"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/number_three"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="3"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>


        <Button
            android:id="@+id/quantity"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="Qty"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/number_four"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="4"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_five"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="5"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_six"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="6"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>


        <Button
            android:id="@+id/discount"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="Disc"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/number_seven"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="7"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_eight"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="8"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_nine"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="9"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>


        <Button
            android:id="@+id/price"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="Price"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/number_plus_minus"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="+/-"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_zero"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="0"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/number_point"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="."
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/number_backspace"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            app:srcCompat="@drawable/ic_backspace" />



    </LinearLayout>

</LinearLayout>


