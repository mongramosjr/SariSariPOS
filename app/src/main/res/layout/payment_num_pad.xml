<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pay_number_one"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="1"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_two"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            android:text="2"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/pay_number_three"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="3"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>


        <Button
            android:id="@+id/pay_plus_10"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="+10"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pay_number_four"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="4"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_five"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="5"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_six"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="6"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>


        <Button
            android:id="@+id/pay_plus_20"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="+20"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pay_number_seven"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="7"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_eight"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="8"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_nine"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="9"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>


        <Button
            android:id="@+id/pay_plus_50"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="+50"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pay_number_clear"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="C"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_zero"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="0"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/pay_number_point"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:text="."
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/pay_number_backspace"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="0dp"
            app:srcCompat="@drawable/ic_backspace" />



    </LinearLayout>

</LinearLayout>


